{
	"name": "Refined Twitter",
	"version": "0.5.0",
	"description": "Enforces the mobile web version of Twitter and improves its interface",
	"homepage_url": "https://github.com/sindresorhus/refined-twitter",
	"manifest_version": 2,
	"minimum_chrome_version": "50",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"storage",
		"https://twitter.com/*"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"128": "icon.png"
	},
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://mobile.twitter.com/*"
			],
			"css": [
				"content.css",
				"dark-mode.css"
			],
			"js": [
				"vendor/mousetrap.js",
				"vendor/mousetrap-global-bind.js",
				"scroll-to-tweet.js",
				"hide-promoted-tweets.js",
				"content.js"
			]
		}
	]
}
